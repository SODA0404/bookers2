

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

    <%= render 'layouts/errors', obj: @item %>

    <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

        <div class="field">
          <label>Name</label><br>
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="field">
          <label>Image</label><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="field">
          <label>Introduction</label><br>
          <%= f.text_area :introduction %>
        </div>

        <div class="actions">
          <%= f.submit "Update User", class: 'btn btn-secondary' %>
        </div>
    <% end %>
  </div>
  </div>
</div>