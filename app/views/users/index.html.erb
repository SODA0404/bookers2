<%= render 'layouts/errors', obj: @item %>

<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render partial: '/layouts/post', locals: { user: @user, new_book: @new_book } %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u| %>
            <tr>
              <td><%= image_tag u.get_profile_image(80, 80) %></td>
              <td><%= u.name %></td>
              <td><%= link_to "Show", user_path(u.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>